{
  "expo": {
    "name": "TrackMyVan Driver",
    "slug": "trackmyvan-driver",
    "version": "1.0.0",
    "scheme": "trackmyvan",
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow TrackMyVan to access your location even when the app is in the background to provide real-time updates to parents."
        }
      ]
    ],
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.trackmyvan.driver",
      "infoPlist": {
        "NSLocationAlwaysUsageDescription": "Your location is required for real-time tracking of the van for parents.",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "permissions": [
          "ACCESS_FINE_LOCATION",
          "ACCESS_COARSE_LOCATION",
          "ACCESS_BACKGROUND_LOCATION"
        ]
      },
      "package": "com.trackmyvan.driver"
    }
  }
}
